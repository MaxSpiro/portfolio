---
import Card from '../components/Card.astro'
import { personal, work } from '../projects'
---

<html>
  <head></head>
  <body class="p-0 m-0">
    <nav class="navbar rounded">
      <a class="normal-case text-4xl md:text-6xl p-4 bg-base-200 w-full">
        Projects - made by me
      </a>
    </nav>
    <main>
      <ul>
        <li class="m-2 p-2">
          <h1 class="text-4xl">Work Experience</h1>
          <h2 class="text-3xl mb-4">Defispot</h2>
          <ul class="flex justify-around flex-wrap gap-2">
            {
              work.map(
                ({ imgName, width, buttonText, title, description, url }) => (
                  <Card
                    imgSrc={`/portfolio/${imgName}`}
                    className="max-w-[1000px]"
                    width={width}
                    buttonText={buttonText}
                    title={title}
                    description={description}
                    url={url}
                  />
                ),
              )
            }
          </ul>
        </li>
        <li class="m-2 p-2">
          <h1 class="text-4xl">Personal projects</h1>
          <ul class="flex justify-around flex-wrap gap-6 py-8">
            {
              personal.map(
                ({
                  imgName,
                  width,
                  className,
                  buttonText,
                  title,
                  description,
                  url,
                }) => (
                  <Card
                    imgSrc={`/portfolio/${imgName}`}
                    className={className}
                    width={width}
                    buttonText={buttonText}
                    title={title}
                    description={description}
                    url={url}
                  />
                ),
              )
            }
          </ul>
        </li>
      </ul>
    </main>
  </body>
</html>
